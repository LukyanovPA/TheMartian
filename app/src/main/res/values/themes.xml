<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TheMartian" parent="android:Theme.Material.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.TheMartian">
        <item name="android:windowBackground">#CFD7C5</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.TheMartian</item>
    </style>
</resources>